%h2 Cadastrar Disciplinas

= form_tag disciplinas_url, :method => :post do

  = label :disciplina, :nome, 'Nome'
  - oferta_lista = []
  - @lista_disciplinas.each do |o|
    - oferta_lista += [o.nome]
  = select :disciplina, :nome, oferta_lista
  %br
  %br
  = label :disciplina, :vagas, 'Vagas'
  = text_field :disciplina, :vagas
  %br
  %br
  = label :disciplina, :professor, 'Professor'
  - professor_lista = []
  - @professores.each do |professor|
    - professor_lista += [professor.nome]
  = select :disciplina, :professor, professor_lista
  %br
  %br
  = label :disciplina, :ativa; 'Disponível'
  = radio_button :disciplina, :ativa, 'Sim ou Não'
  %br
  %br
  = image_submit_tag('salvar.png')

= link_to image_tag('voltar.png'), disciplinas_url
